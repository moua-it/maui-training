<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ContactSyncApp.View.ContactFormPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Entry Placeholder="Name" Text="{Binding Name}" />
            <DatePicker Date="{Binding Birthday}" />
            <Entry Placeholder="Address" Text="{Binding Address}" />
            <Entry Placeholder="City" Text="{Binding City}" />
            <Entry Placeholder="State" Text="{Binding State}" />
            <Entry
                Keyboard="Telephone"
                Placeholder="Phone Number"
                Text="{Binding PhoneNumber}" />
            <Entry
                Keyboard="Email"
                Placeholder="Email"
                Text="{Binding Email}" />

            <HorizontalStackLayout Margin="0,20,0,0" Spacing="10">
                <Button Command="{Binding SaveContactCommand}" Text="Save" />
                <Button Command="{Binding DeleteContactCommand}" Text="Delete" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>