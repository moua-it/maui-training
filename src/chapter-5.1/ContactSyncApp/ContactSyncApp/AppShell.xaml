<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ContactSyncApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:ContactSyncApp.View"
    Title="ContactSyncApp"
    FlyoutBackgroundImage="background_image.jpg"
    FlyoutBackgroundImageAspect="AspectFill"
    Shell.FlyoutBehavior="Flyout">

    <Shell.FlyoutHeader BackgroundColor="#F0F0F0">
        <Grid
            Padding="20"
            BackgroundColor="#F0F0F0"
            HeightRequest="170">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="contacts.png" />
            <Label
                Grid.Row="1"
                Margin="0,20,0,0"
                FontAttributes="Bold"
                FontSize="23"
                HorizontalOptions="Center"
                Text="ContactSync" />
        </Grid>
    </Shell.FlyoutHeader>


    <FlyoutItem Title="Home" Icon="home.png">
        <ShellContent ContentTemplate="{DataTemplate view:MainPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Contacts" Icon="contacts.png">
        <ShellContent ContentTemplate="{DataTemplate view:ContactListPage}" />
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <Grid BackgroundColor="{StaticResource Gray900}" HeightRequest="60">
            <Label
                HorizontalOptions="Center"
                Text="Version 1.0"
                TextColor="White"
                VerticalOptions="Center" />
        </Grid>
    </Shell.FlyoutFooter>

    <!--
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate view:MainPage}"
            Icon="home.png" />

        <ShellContent
            Title="Contacts"
            ContentTemplate="{DataTemplate view:ContactFormPage}"
            Icon="contacts.png" />
    </TabBar>
    -->

</Shell>
