<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactSyncApp.View.ContactFormPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Entry Placeholder="Name" Text="{Binding Name}" />
            <DatePicker Date="{Binding Birthday}" />
            <Entry Placeholder="Address" Text="{Binding Address}" />
            <Entry Placeholder="City" Text="{Binding City}" />
            <Entry Placeholder="State" Text="{Binding State}" />
            <Entry Placeholder="Phone Number" Text="{Binding PhoneNumber}" Keyboard="Telephone" />
            <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />

            <HorizontalStackLayout Spacing="10" Margin="0,20,0,0">
                <Button Text="Save" Command="{Binding SaveCommand}" />
                <Button Text="Delete" Command="{Binding DeleteCommand}" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>